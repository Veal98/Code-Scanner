    <!--    </LinearLayout>-->


    <EditText
        android:id="@+id/et_code_key"
        android:layout_width="296dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:hint="输入要生成码的内容"
        android:padding="10dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />

    <Button
        android:id="@+id/btn_create_code"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="172dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape1"
        android:gravity="center"
        android:padding="10dp"
        android:text="生成码"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add_logo"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape1"
        android:gravity="center"
        android:padding="10dp"
        android:text="添加logo"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#66CCFF"
        app:layout_constraintBottom_toTopOf="@+id/iv_2_code"
        app:layout_constraintTop_toBottomOf="@+id/btn_share_img"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_share_img"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape1"
        android:gravity="center"
        android:padding="10dp"
        android:text="分享图片"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_save_2_code"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape1"
        android:gravity="center"
        android:padding="10dp"
        android:text="保存二维码"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_save_bar_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_save_bar_code"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape1"
        android:gravity="center"
        android:padding="10dp"
        android:text="保存条形码"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_share_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_2_code"
        android:layout_width="229dp"
        android:layout_height="160dp"
        android:layout_marginTop="368dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_bar_code"
        android:layout_width="323dp"
        android:layout_height="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_2_code"
        app:layout_constraintVertical_bias="0.439" />


</androidx.constraintlayout.widget.ConstraintLayout>